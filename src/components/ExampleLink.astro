---
interface Props {
  title: string;
  example: string;
  description?: string;
}

import { LinkCard } from "@astrojs/starlight/components";
const { title, example, description } = Astro.props;
---

<LinkCard
  title={`Genkit by Example: ${title}`}
  description={description}
  href={`https://examples.genkit.dev/${example}?utm_source=genkit.dev&utm_content=contextlink`}
  target="_blank"
/>
